{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=surmo;Integrated Security=True;Connect Timeout=30;Encrypt=True;Trust Server Certificate=True;Application Intent=ReadWrite;Multi Subnet Failover=False;Database=GameStoreApi",
    "MongoDbConnectionString": "mongodb://localhost:27017/test"
  },
  "GameFiles": {
    "BaseDirectory": "GameFiles",
    "TimeStampPattern": "yyyy-MM-dd",
    "BaseFolder": "MyGameFiles"
  },
  "PaymentExternalService": {
    "BaseUrl" : "https://localhost:5001/",
    "MaxAttempts": 3,
    "DelayInSeconds": 2
  },
  "AuthentificationService": {
    "BaseUrl" : "https://localhost:5001/api/auth",
    "MaxAttempts" : 3,
    "DelayInSeconds": 1
  },
  "IBoxPaymentMethod": {
    "Title": "IBox terminal",
    "Endpoint": "api/payments/ibox",
    "RelativePath": "api/payment/ibox"
  },
  "Visa": {
    "Title": "Visa",
    "Endpoint": "api/payments/visa",
    "RelativePath": "api/payment/visa"
  },
  "Bank": {
    "Title" : "Bank",
    "InvoiceDaysValid": 30
  },
  "JwtSettings": {
    "SecretKey": "Game-Store-Super-Secret-Jwt-Authorization-Key-No-One-Could-Ever-Guess",
    "Issuer": "GameStore MegaCorporation",
    "Audience": "My-Audience",
    "ExpirationInMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "Using": [
        "Serilog.Sinks.Console",
        "Serilog.Sinks.File",
        "Serilog.Sinks.Udp",
        "Serilog.Formatting.Syslog"
      ]
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/error.txt",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "Udp",
        "Args": {
          "remoteAddress": "127.0.0.1",
          "remotePort": 514,
          "formatter": "Serilog.Formatting.Syslog.Rfc3164Formatter, Serilog.Formatting.Syslog"
        }
      }
    ]
  }
}